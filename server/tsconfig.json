{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": false,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/"],
            "typings/*": ["src/typings/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/test/**/*.spec.ts"]
}
